@model IEnumerable<AdvocaciaPPFinal.Models.Processo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-md-6">
        <h3>
            Livros Cadastrados
        </h3>
    </div>
    <div class="col-md-6">
        <form asp-controller="Processoes" asp-action="Index">
            <p>
                <select method="get" name="SearchOption">
                    <option value="Status">Status</option>
                    <option value="Descricao">Descrição</option>
                </select>
                <b>Title: </b> <input type="text" name="SearchString" method="get">
                <input class="btn btn-dark" type="submit" value="Filter" />
            </p>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeAdvogado_Processo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCliente_Processo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_de_Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeAdvogado_Processo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCliente_Processo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data_de_Inicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id_Processo">Edit</a> |
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id_Processo">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id_Processo">Delete</a>
                </td>
            </tr>
        }
        <a class="btn btn-secondary text-dark" asp-area="" asp-controller="Processos" asp-action="GerarRelatorio">Gerar Relatório</a>
    </tbody>
</table>
